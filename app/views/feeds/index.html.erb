<p id="notice"><%= notice %></p>

<h1>Listing Feeds</h1>

<table border="1" class="table table-striped .table-bordered table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th class="hidden-sm hidden-xs">Url</th>
      <th class="hidden-sm hidden-xs">Publish date</th>
      <th colspan="3">Details</th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |key, value| %>
      <tr>
        <td><%= value[:title] %></td>
        <td><%= value[:description] %></td>
        <td class="hidden-sm hidden-xs"><%= value[:link] %></td>
        <td class="hidden-sm hidden-xs"><%= value[:pubDate] %></td>
        <td><%= link_to 'Show', "/feeds/details?guid=#{URI.encode key}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
